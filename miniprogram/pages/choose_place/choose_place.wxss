.small_font_size{
  font-size: small;
}

.gray_font{
  color: gray;
}

.image_use{
  width: 250px;
  height: 90px;
  background-color: #f8e3eb;
}

.place{
  background-color: rgba(255, 255, 255, 0.658);
  margin: 15px auto;
  width: 80%;
  display: flex;
  flex-direction: column;
  justify-items: center;
  align-self: center;
  align-items: center;
  padding: 10px;
  border-radius: 4px;
  box-shadow: 4px 4px 2px rgba(155, 153, 153, 0.459);
  /* font-family: cursive; */
  }

.people{
  display: flex;
  justify-content: center;
  height: 60px;
  border-bottom: 1px rgb(170, 167, 167) solid;
}

.small_flex_box{
  width: 150px;
  display: flex;
  flex-direction: column;
  justify-items: center;
  align-self: center;
  align-items: center; 
}

.divide_two{
  display: flex;
  justify-content: space-between;
}

.info{
  width: 80%;
  border-bottom: 1px rgba(173, 171, 171, 0.308) solid;
  padding: 5px;
}

.navigator{
  margin: 10px;
  color: white;
  margin-top: 10px;
  border-radius: 2px;
  background-color: #56a9cf;
  padding: 5px;
}

.tip{
  /* font-family: cursive; */
  position: fixed;
  /* border-radius: 10px; */
  overflow: hidden;
  height: 450px;
  /* max-height: 450px; */
  border: 2px solid rgb(141, 156, 156);
  top: 5%;
  left: 5%;
  z-index: 100;
  width: 80%;
  background-color: rgba(243, 243, 243, 0.952);
  padding: 12px;
  box-shadow: 4px 4px 2px rgba(128, 128, 128, 0.658);
}

.title{
  text-align: center;
  padding-bottom: 8px;
  border-bottom: 1px solid gray;
  font-weight: bold;
  font-size:15px;
}

.paragragh{
  margin-top: 10px;
  font-family: 仿宋;
}

.hide{
  display: none;
}

.sure{
  margin: 0 auto;
  text-align: center;
  padding: 7px;
  border-radius: 5px;
  border: 1px solid gray;
  color: rgb(255, 255, 255);
  width: 60px;
  margin-top: 20px;
  background-color: rgb(97, 213, 241);
}

.to_font{
  width: 92%;
  position: absolute;
}

.to_back{
  top: 20%;
  opacity: 0.25;
  position: absolute;
  width: 90%;
}
