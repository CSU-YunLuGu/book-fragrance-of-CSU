/* pages/start/start.wxss */
.root {
	width: 100%;
	 height: 100%;
	 position: relative;
  }

.background-image{
	width: 750rpx; 
	height: 1500rpx;
	 position: fixed;
	 width: 100%;
	 left: 0px;
	 top: 0px;
	 opacity: 0.85;
  }
.content{
	 position: absolute;
	 width: 100%;
	 height: 100%;
	 left: 0px;
	 top: 0px;
  }

.timer{
	position: absolute;
	top: 15px;
	right: 15px;
	border: 3px solid black;
	text-align: center;
	width: 25px;
	height: 25px;
	border-radius: 15px;
}