/* pages/start/start.wxss */
.root1 {
	width: 100%;
	 height: 100%;
	 position: relative;
  }

.background{
	 position: fixed;
	 width: 100%;
	 opacity: 0.8;
  }
.content{
	 position: absolute;
	 width: 100%;
	 height: 100%;
	 left: 0px;
	 top: 0px;
  }

.timer{
	font-weight: bold;
	color: wheat;
	position: absolute;
	top: 15px;
	right: 15px;
	background-color: rgba(51, 51, 51, 0.603);
	border: 3px solid rgba(51, 51, 51, 0.603);
	text-align: center;
	width: 40px;
	height: 25px;
	border-radius: 15px;
}